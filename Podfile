platform :ios, '12.1'

target 'KindleShelf' do
 
  use_frameworks!
  
   # ignore all warnings from all pods
  inhibit_all_warnings!

  # UI
  pod 'SnapKit'
  
  # Util
  pod 'Reusable'

  # DI
  pod 'Swinject'

  # Network
  pod 'Alamofire'
  pod 'ObjectMapper'
  pod 'AlamofireImage'

  # lint
  pod 'SwiftLint'

  # Rx
  pod 'RxSwift',    '~> 4.0'
  pod 'RxCocoa',    '~> 4.0'
  pod 'RxOptional'
  pod 'RxDataSources'
  pod 'RxFlow'
  pod 'Action'
  

  # Debugger
  pod 'Reveal-SDK', :configurations => ['Debug'] 

end
